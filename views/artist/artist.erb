<h3><a href="/artists">Artists</a></h3>
<h2><strong><%= @artist.name %></strong></h2>

<ol>
  <% songz = @artist.songs.sort{|s1, s2| s1.name.downcase <=> s2.name.downcase} %>
  <% max = Song.longest_name_length(songz) %>
  <% songz.each do |song| %>
    <li><a href="/songs/<%= song.to_param %>"><pre><%= song.print_with_links(max) %></pre></a></li>
  <% end %>
</ol>

